div.chart
  div.form-group
    label(for="algo")
      | Algorithm
    select.form-control(id="algo" ng-model="algo" ng-change="getData();")
      option(value="sma")
        | Simple Moving Average
      option(value="ema")
        | Exponential Moving Average
      option(value="dema")
        | Double Exponential Moving Average

  div.form-group
    rate-picker(ng-model="rate" ng-change="getData(); setAutoRefresh()")

  linechart(data="data" options="chartOpts" height="720")