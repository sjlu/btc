div.trends
  div.form-group
    label(for="algo")
      | Algorithm
    select.form-control(id="algo" ng-model="algo" ng-change="getData();")
      option(value="sma")
        | Simple Moving Average
      option(value="ema")
        | Exponential Moving Average
      option(value="dema")
        | Double Exponential Moving Average

  div.form-group
    label(for="rate")
      | Frame Rate
    select.form-control(id="rate" ng-model="rate" ng-change="getData();")
      option(value="60")
        | 1 minute
      option(value="300")
        | 5 minutes
      option(value="900")
        | 15 minutes

  table.table.table-bordered
    thead
      th
        | time
      th
        | type
      th
        | price
    tbody
      tr(ng-repeat="row in data")
        td
          | {{row.time}}
        td
          | {{row.type}}
        td
          | {{row.price}}